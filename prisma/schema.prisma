generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // lado oposto da relação 1:1
  credential Credential?

  createdAt DateTime @default(now())
  builds    Build[]
}

model Credential {
  id           String @id @default(cuid())
  userId       String @unique
  username     String @unique
  passwordHash String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CharacterBase {
  id        String   @id @default(cuid())
  key       String   @unique // ex: "elesis", "lire"
  name      String // ex: "Elesis"
  job       String // ex: "Knight"
  createdAt DateTime @default(now())

  builds Build[]
}

model Build {
  id              String @id @default(cuid())
  name            String
  userId          String
  characterBaseId String

  user          User          @relation(fields: [userId], references: [id])
  characterBase CharacterBase @relation(fields: [characterBaseId], references: [id])

  data Json // config crua da build (equip, cartas, etc)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
